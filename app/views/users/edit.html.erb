<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h3>Edit Profile</h3>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :avatar %>
          <br>
          <%= render 'shared/avatar', user: @user %>
          <br>
          <br>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'Full Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :position %>
          <%= f.text_field :position, class: 'form-control', placeholder: 'Position (ex: Community Leader, Data Scientists, etc)' %>
        </div>
        <div class="form-group">
          <%= f.label :affiliated_organization %>
          <%= f.text_field :affiliated_organization, class: 'form-control', placeholder: 'Affiliated Organization' %>
        </div>
        <div class="form-group">
          <%= f.label :about %>
          <%= f.text_area :about, placeholder: 'About', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :location %>
          <%= f.text_field :location, placeholder: 'Location', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :linkedin %>
          <%= f.url_field :linkedin, placeholder: 'Linkedin Address (only visible to mutual friends)', class: 'form-control' %>
        </div>
        <div class="actions">
          <%= submit_tag 'Update', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
